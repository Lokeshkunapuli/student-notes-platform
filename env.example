# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/student_notes_platform
# For production, use MongoDB Atlas or another cloud database:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/student_notes_platform

# JWT Secret (generate a strong secret key)
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5173
# For production, use your deployed frontend URL:
# CLIENT_ORIGIN=https://your-frontend-domain.vercel.app

# Cloudinary (if using for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend Environment Variables (for Vite)
# Create a .env file in the frontend directory with:
# VITE_API_BASE_URL=http://localhost:5000
# For production:
# VITE_API_BASE_URL=https://your-backend-domain.onrender.com
